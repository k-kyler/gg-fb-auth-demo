extends ./layout

block content
    .container.weather
        .d-flex.align-items-start.justify-content-between.pt-3
            div(class="d-flex align-items-center justify-content-center")
                img(src=userData.profilePic, alt="user pic", width="30", height="30")
                span(class="ml-2") #{userData.username}

            if userData.signInType === "Google"
                button(id="googleSignOutButton", class="btn btn-outline-danger") Sign out
            
            if userData.signInType === "Facebook"
                button(id="facebookSignOutButton", class="btn btn-outline-danger") Sign out
            

        div(class="mt-5")
            hr
            h5(id="hcm") Ho Chi Minh
            div(id="hcmWeather" class="d-flex flex-column align-items-center justify-content-center")
            hr
            h5(id="hn") Ha Noi
            div(id="hnWeather" class="d-flex flex-column align-items-center justify-content-center")